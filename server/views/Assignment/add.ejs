<% include ../Partials/header.ejs %>
<% include ../Partials/main_nav.ejs %>
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="courseTextField">Assignment Course</label>
                    <input type="text" class="form-control" id="nameTextField" 
                    placeholder="Enter the Assignment's Course" name="Course" required>
                </div>
                <div class="form-group">
                    <label for="nameTextField">Assignment Name</label>
                    <input type="text" class="form-control" id="authorTextField" 
                    placeholder="Enter the Assignment's Name" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="statusTextField">Assignment Status</label>
                    <input type="text" class="form-control" id="publishedTextField" 
                    placeholder="Enter the Assignment's Status" name="Status" required>
                </div>
                <div class="form-group">
                    <label for="dueTextField">Assignment's Due Date</label>
                    <!--Reference: https://developer.mozilla.org/en-US/docs/Web/HTML/Element/input/datetime-local-->
                    <input type="datetime-local" class="form-control" id="dueTextField" 
                    placeholder="Enter the Assignment's Due Date" name="Due" required>
                </div>
        <button class="btn btn-primary" type="submit">
            <i class="fas fa-edit"></i>
            Submit</button>
        <a href="/tracker" class="btn btn-warning">
            <i class="fas fa-undo"></i>Cancel</a>
            </form>
        </div>
    </div>
</div>
<% include ../Partials/footer.ejs %>
